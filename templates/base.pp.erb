
exec { 'apt-get update':
  path => ['/usr/bin'],
}

class { 'omeka':
  hostname => '<%= vm_host %>',
  rootdir  => '/vagrant',
  require  => Exec['apt-get update'],
  debug    => true,
}

omeka::gitplugin { '<%= plugin_title %>':
  url     => 'git://github.com/<%= plugin_owner %>/<%= plugin_reponame %>.git',
  require => Class['Omeka'],
}

